@model CodeTrip.Models.Transporte;
<link href="~/css/cadastraprod.css" rel="stylesheet" />


<h1 class="titulo-prod">Cadastrar Transporte</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarTransporte" class="form-prod">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Tipo_Transp" class="control-label"></label>
                <input asp-for="Tipo_Transp" class="form-control" />
                <span asp-validation-for="Tipo_Transp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="UF_Estado">Estado:</label>
                <select name="UF_Estado" id="UF_Estado" class="form-control" asp-items="@ViewBag.Estados">
                    <option value="">-- Selecione um Estado --</option>
                </select>
            </div>


            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
            <div class="voltar-prod">
                <a asp-action="Index" class="btn btn-outline-dark">Voltar para Transporte</a>
            </div>
            <div class="voltar-prod">
                <a asp-area="" asp-controller="Home" asp-action="MenuSistema" class="btn btn-outline-dark">Voltar ao Menu Principal</a>
            </div>
        </form>
    </div>
</div>
