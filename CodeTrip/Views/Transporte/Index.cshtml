@model IEnumerable<CodeTrip.Models.Transporte>

<p>
    <a asp-controller="Transporte" asp-action="CadastrarTransporte">Cadastrar Transporte</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Logradouro_End_Transporte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero_End_Transporte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro_End_Transporte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Complemento_End_Transporte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade_Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UF_Estado)
            </th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Logradouro_End_Transporte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero_End_Transporte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bairro_End_Transporte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Complemento_End_Transporte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade_Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UF_Estado)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditarTransporte", new { id = item.Id_Transp }) |
                    @Html.ActionLink("Excluir", "ExcluirTransporte", new { id = item.Id_Transp },
                             new { onclick = "return confirm('Deseja realmente Excluir este item?');" })
                </td>
            </tr>
        }
    </tbody>
</table>