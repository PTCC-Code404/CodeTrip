@model CodeTrip.Models.Hospedagem;
<link href="~/css/cadastraprod.css" rel="stylesheet" />


<h1 class="titulo-prod">Cadastrar Hospedagem</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarHospedagem" class="form-prod">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome_Hospedagem" class="control-label"></label>
                <input asp-for="Nome_Hospedagem" class="form-control" />
                <span asp-validation-for="Nome_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Tipo_Hospedagem" class="control-label"></label>
                <input asp-for="Id_Tipo_Hospedagem" class="form-control" />
                <span asp-validation-for="Id_Tipo_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Pensao" class="control-label"></label>
                <input asp-for="Id_Pensao" class="form-control" />
                <span asp-validation-for="Id_Pensao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Logradouro_Endereço_Hospedagem" class="control-label"></label>
                <input asp-for="Logradouro_Endereço_Hospedagem" class="form-control" />
                <span asp-validation-for="Logradouro_Endereço_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Numero_Endereço_Hospedagem" class="control-label"></label>
                <input asp-for="Numero_Endereço_Hospedagem" class="form-control" />
                <span asp-validation-for="Numero_Endereço_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bairro_Endereço_Hospedagem" class="control-label"></label>
                <input asp-for="Bairro_Endereço_Hospedagem" class="form-control" />
                <span asp-validation-for="Bairro_Endereço_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Complemento_Endereço_Hospedagem" class="control-label"></label>
                <input asp-for="Complemento_Endereço_Hospedagem" class="form-control" />
                <span asp-validation-for="Complemento_Endereço_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cidade_Nome" class="control-label"></label>
                <input asp-for="Cidade_Nome" class="form-control" />
                <span asp-validation-for="Cidade_Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UF_Estado" class="control-label"></label>
                <input asp-for="UF_Estado" class="form-control" />
                <span asp-validation-for="UF_Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
            <div class="voltar-prod">
                <a asp-action="Index" class="btn btn-outline-dark">Voltar para Hospedagem</a>
            </div>
            <div class="voltar-prod">
                <a asp-area="" asp-controller="Home" asp-action="MenuSistema" class="btn btn-outline-dark">Voltar ao Menu Principal</a>
            </div>
        </form>
    </div>
</div>
