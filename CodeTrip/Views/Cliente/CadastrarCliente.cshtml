@model CodeTrip.Models.Cliente;
<link href="~/css/cadastraprod.css" rel="stylesheet" />


<h1 class="titulo-prod">Cadastrar Cliente</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarCliente" class="form-prod">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome_Cli" class="control-label"></label>
                <input asp-for="Nome_Cli" class="form-control" />
                <span asp-validation-for="Nome_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email_Cli" class="control-label"></label>
                <input asp-for="Email_Cli" class="form-control" />
                <span asp-validation-for="Email_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Data_Nasc_Cli" class="control-label"></label>
                <input asp-for="Data_Nasc_Cli" class="form-control" />
                <span asp-validation-for="Data_Nasc_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CPF_Cli" class="control-label"></label>
                <input asp-for="CPF_Cli" class="form-control" />
                <span asp-validation-for="CPF_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefone_Cli" class="control-label"></label>
                <input asp-for="Telefone_Cli" class="form-control" />
                <span asp-validation-for="Telefone_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Logradouro_Cli" class="control-label"></label>
                <input asp-for="Logradouro_Cli" class="form-control" />
                <span asp-validation-for="Logradouro_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Numero_Cli" class="control-label"></label>
                <input asp-for="Numero_Cli" class="form-control" />
                <span asp-validation-for="Numero_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bairro_Cli" class="control-label"></label>
                <input asp-for="Bairro_Cli" class="form-control" />
                <span asp-validation-for="Bairro_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Complemento_Cli" class="control-label"></label>
                <input asp-for="Complemento_Cli" class="form-control" />
                <span asp-validation-for="Complemento_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cidade_Nome" class="control-label"></label>
                <input asp-for="Cidade_Nome" class="form-control" />
                <span asp-validation-for="Cidade_Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UF_Estado" class="control-label"></label>
                <input asp-for="UF_Estado" class="form-control" />
                <span asp-validation-for="UF_Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
            <div class="voltar-prod">
                <a asp-action="Index" class="btn btn-outline-dark">Voltar</a>
            </div>
        </form>
    </div>
</div>
